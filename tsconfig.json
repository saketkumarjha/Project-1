{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node10",  // Changed back to node10 for commonjs
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowSyntheticDefaultImports": true,
    "ignoreDeprecations": "5.0"  // Suppress the deprecation warning
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}